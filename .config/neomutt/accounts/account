# add your account details here

# vim: filetype=muttrc
unmailboxes *


set ssl_starttls = "yes"
set idn_encode = "no"

# in/out mail servers
set realname = ""
#set imap_pass = ""
set smtp_url = ""
set smtp_pass = ""
set smtp_user = ""

# this isn't an error
set folder = "imaps://example@example.com@example.com:993"
set spoolfile = "+INBOX"

set from = ""
set envelope_from
set use_from = "yes"
set record = "+Sent"
set trash = "+Trash"
set postponed = "+Drafts"
set mail_check = 6

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

## Hook -- IMPORTANT!
account-hook $folder "set imap_pass="

