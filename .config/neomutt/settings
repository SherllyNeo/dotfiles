# forward attachments as part of body
# format of quoting header
# reply to Reply to: field
# reply as whomever it was to                     # Sort by newest conversation first.
# include message in replies                      set charset = "utf-8"
# correct indentation for plain text              set uncollapse_jump
# no dashes before sig                            set sort_re


# Sort by newest conversation first.
set sort = reverse-threads
set sort_aux = last-date-received
# How we reply and quote emails.
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
set send_charset = "utf-8:iso-8859-1:us-ascii" 


#sidebar
